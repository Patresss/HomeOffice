<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<fx:root styleClass="main-pane" type="AnchorPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <VBox AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <GridPane alignment="BOTTOM_CENTER" hgap="10.0" vgap="25.0">
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <JFXButton fx:id="availableButton" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" text="Button" textAlignment="CENTER">
                     <graphic>
                     </graphic>
                     <graphic>
                        <FontAwesomeIconView glyphName="LIGHTBULB_ALT" />
                     </graphic>
                     <styleClass>
                        <String fx:value="main-button" />
                        <String fx:value="available-button" />
                     </styleClass>
                  </JFXButton>
                      <JFXButton fx:id="workingButton" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" textAlignment="CENTER" GridPane.columnIndex="1">
                     <graphic>
                     </graphic>
                     <graphic>
                        <FontAwesomeIconView glyphName="LIGHTBULB_ALT" styleClass="working-icon" />
                     </graphic>
                     <styleClass>
                        <String fx:value="main-button" />
                        <String fx:value="working-button" />
                     </styleClass>
                  </JFXButton>
                  <JFXButton fx:id="meetingMicrophoneButton" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" textAlignment="CENTER" GridPane.columnIndex="2">
                     <graphic>
                     </graphic>
                     <graphic>
                        <FontAwesomeIconView glyphName="LIGHTBULB_ALT" styleClass="meeting-microphone-icon" />
                     </graphic>
                     <styleClass>
                        <String fx:value="main-button" />
                        <String fx:value="meeting-microphone-button" />
                     </styleClass>
                  </JFXButton>
                  <JFXButton fx:id="automationButton" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" textAlignment="CENTER" GridPane.columnIndex="4">
                     <graphic>
                     </graphic>
                     <graphic>
                        <FontAwesomeIconView glyphName="REFRESH" styleClass="automation-icon" />
                     </graphic>
                     <styleClass>
                        <String fx:value="main-button" />
                        <String fx:value="automation-button" />
                     </styleClass>
                  </JFXButton>
                  <JFXButton fx:id="turnOffButton" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" textAlignment="CENTER" GridPane.columnIndex="5">
                     <graphic>
                     </graphic>
                     <graphic>
                        <FontAwesomeIconView glyphName="CIRCLE" styleClass="turn-off-icon" />
                     </graphic>
                     <styleClass>
                        <String fx:value="main-button" />
                        <String fx:value="turn-off-button" />
                     </styleClass>
                  </JFXButton>
                  <GridPane vgap="10.0" GridPane.columnIndex="6">
                    <columnConstraints>
                      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="-Infinity" prefWidth="30.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints valignment="TOP" vgrow="SOMETIMES" />
                      <RowConstraints valignment="BOTTOM" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <JFXButton fx:id="exitButton" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" onAction="#exitWindow" styleClass="exit-button" textAlignment="CENTER">
                           <graphic>
                              <FontAwesomeIconView glyphName="CLOSE" styleClass="turn-off-icon" />
                           </graphic>
                        </JFXButton>
                        <JFXToggleButton fx:id="pinToggleButton" rotate="90.0" size="5.0" text=" " GridPane.rowIndex="1" />
                     </children>
                  </GridPane>
                  <JFXButton fx:id="meetingWebcamButton" alignment="CENTER" contentDisplay="CENTER" defaultButton="true" mnemonicParsing="false" textAlignment="CENTER" GridPane.columnIndex="3">
                     <graphic>
                        <FontAwesomeIconView glyphName="LIGHTBULB_ALT" />
                     </graphic>
                     <styleClass>
                        <String fx:value="main-button" />
                        <String fx:value="meeting-webcam-button" />
                     </styleClass>
                  </JFXButton>
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" />
               </VBox.margin>
            </GridPane>
         </children>
      </VBox>
    </children>
</fx:root>
